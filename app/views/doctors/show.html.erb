<div class="row">
  <div class="col-md-6">
    <h1 data-name="full_name">Doctor Details: </h1>
    <hr>
    <h5>NPI: <span class="fw-lighter" data-name="npi"><%= @doctor.npi %></span></h5>
    <h5>First Name: <span class="fw-lighter" data-name="first_name"><%= @doctor.person.first_name %></span></h5>
    <h5>Last Name: <span class="fw-lighter" data-name="last_name"><%= @doctor.person.last_name %></span></h5>
  </div>
  <div class="col-md-6">
    <%= button_to 'Remove', doctor_path(@doctor), method: 'delete', class: 'dropdown-item', class: 'btn btn-danger float-end m-1' %>
    <%= link_to "Edit this doctor", edit_doctor_path(@doctor), class: 'btn btn-success float-end m-1' %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% if @doctor.status_inactive? %>
      <p class='text-danger text-center'>this doctor is inactive.</p>
    <% end %>
  </div>
</div>

