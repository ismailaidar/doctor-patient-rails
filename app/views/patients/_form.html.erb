<%= form_with(model: patient) do |form| %>
    <% if patient.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <div style="color: red">
          <h3><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h3>
          <ul>
            <% patient.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
          </ul>
          <% flash.each do |type, msg| %>
            <div class="alert alert-info"><%= msg %> </div>
          <% end %>
        </div>
      </div>
    <% end %>
  
  <div class="form-group">
    <%= form.label :upi %>
    <%= form.text_field :upi, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :doctor_id %>
    <%= form.collection_select :doctor_id, @doctors,
        :person_id, :full_name_status_str ,
        { :selected => @patient.doctor_id, 
          include_blank: '-- select doctor -- ',
          disabled: @disabled_doctors },
        { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= form.label :person_id %>
    <%= form.collection_select :person_id,
        @people, :id, :full_name ,
        { :selected => @patient.person_id,  include_blank: '-- select person -- ' },
        { class: 'form-control'} %>
  </div>
  <div>
    <%= form.submit class: 'btn btn-success mt-3' %>
  </div>
<% end %>
