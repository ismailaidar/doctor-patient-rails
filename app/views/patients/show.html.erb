<div class="row">
  <div class="col-md-6">
    <h1 data-name='patient_full_name'>Patient <%= @patient.person.full_name %></h1>
    <h4>UPI: <span class="fw-lighter" data-name='upi'><%= @patient.upi %></span></h4>
    <hr>
    <h4>
      Priamry care:
      <% if @patient&.doctor.present? %>
        <span class="fw-lighter" data-name="doctor_full_name" ><%= @patient.doctor.person.full_name %></span>
        <% if @patient.doctor.status_inactive? %>
          <span class="text-danger fw-lighter">(this doctor is inactive)</span>
        <% end %>
      <% else %>
        <span class="text-warning fw-lighter">N/A</span>
      <% end %>
    </h4>
  </div>
  <div class="col-md-6">
    <%= button_to 'Remove', patient_path(@patient), method: 'delete', class: 'dropdown-item', class: 'btn btn-danger float-end m-1' %>
    <%= link_to "Edit this patient", edit_patient_path(@patient), class: 'btn btn-success float-end m-1' %> 
  </div>
</div>