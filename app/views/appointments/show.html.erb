<div class="row">
  <div class="container-fuild">
    <div class="row">
      <div class="col-md-9">
        <h4>Appointment Details:</h4>
        <h6>
          <b>Time:</b>
          <span data-name='start_time'><%= @appointment.timerange.first.to_formatted_s(:long) %></span> 
          <span class="text-dark">to</span>
          <span data-name='end_time'><%= @appointment.timerange.last.to_formatted_s(:long) %></span>
        </h6>
      </div>
      <div class="col-md-3">
        <%= button_to 'Remove', appointment_path(@appointment), method: 'delete', class: 'btn btn-danger float-end m-1' %>
        <%= link_to "Edit this Appointment", edit_appointment_path(@appointment), class: 'btn btn-success float-end m-1' %>
      </div>
    </div>
    <div class="row mt-1">
      <div class="col-md-6 py-2">
        <h5 data-name="doctor_full_name">
          Doctor:  <%= link_to @appointment.doctor.person.full_name, @appointment.doctor, class: 'link-primary' %>
        </h5>
        <hr>
        <h6>NPI: <span class="fw-lighter" data-name="npi"><%= @appointment.doctor.npi %></span></h6>
        <% if @appointment.doctor.status_inactive? %>
          <p class='text-danger'>this doctor is inactive.</p>
        <% end %>
      </div>
      <div class="col-md-6 py-2 vl">
        <h5 data-name="patient_full_name">
          Patient: <%= link_to @appointment.patient.person.full_name, @appointment.patient, class: 'link-primary' %>
        </h5>
        <hr>
        <h6>UPI: <span class="fw-lighter" data-name="upi"><%= @appointment.patient.upi %></span></h6>
      </div>
    </div>
  </div>
</div>