<h1>People</h1>
<div id="people">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>FIRST NAME</th>
        <th>LAST NAME</th>
        <th>SHOW</th>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.id %></td>
          <td><%= person.first_name %></td>
          <td><%= person.last_name %></td>
          <td>
            <%= link_to 'Show', person, class: 'dropdown-item', class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to "New person", new_person_path, class: 'btn btn-primary' %>